<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical"
    tools:context="com.alamaanah.nisaarnadiadwala.Home"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/ivName"
        android:layout_width="fill_parent"
        android:layout_marginRight="20dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/name3" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="1"
        android:orientation="horizontal"
        android:rowCount="4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp" >

        <Button
            android:id="@+id/bNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_buttoon_back"
            android:paddingLeft="100dp"
            android:paddingRight="8dp"
            android:text="notes"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="23sp"
            android:textColor="#ebebeb"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/bEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/home_buttoon_back"
            android:paddingLeft="97dp"
            android:paddingRight="8dp"
            android:text="events"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="23sp"
            android:textColor="#ebebeb"
            android:layout_gravity="fill_horizontal"
 />

        <Button
            android:id="@+id/bAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            
            android:background="@drawable/home_buttoon_back"
            android:paddingLeft="100dp"
            android:paddingRight="8dp"
            android:text="about"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="23sp"
            android:textColor="#ebebeb"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
             />

        <Button
            android:id="@+id/bBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:background="@drawable/home_buttoon_back"
            android:paddingLeft="100dp"
            android:paddingRight="8dp"
            android:text="books"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="23sp"
            android:textColor="#ebebeb"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp" />
    </GridLayout>

</RelativeLayout>