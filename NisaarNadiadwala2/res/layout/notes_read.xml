<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_back"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <LinearLayout
            android:id="@+id/llNotesContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundedcorners"
            android:clickable="false"
            android:orientation="vertical"
            android:paddingBottom="8dp" >

            <TextView
                android:id="@+id/tvNotesReadTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:text="visible"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textIsSelectable="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="visible"
                android:textIsSelectable="true"
                 />

            <Button
                android:id="@+id/bShareNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cal_share_button_back"
                android:drawableLeft="@drawable/share_icon"
                android:focusable="false"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="Share"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>