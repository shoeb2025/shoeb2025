<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rlTutorial" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:visibility="gone"
        >
        
        <TextView 
            android:id="@+id/tvTutorialInstr"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Swipe left or right to navigate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.ShowcaseView.Title"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"/>
        <ImageView 
            android:id="@+id/ivSwipeLeft"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvTutorialInstr"
            android:layout_marginTop="20dp"
            android:src="@drawable/swipe_left_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="false"/>
        
        <ImageView 
            android:id="@+id/ivSwipeUp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/swipe_up"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        
        
        <Button 
            android:id="@+id/bCloseTutorial"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Close"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="5dp"/>
        
        <TextView 
            android:id="@+id/tvTutorialInstr2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Swipe up to open Share Menu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.ShowcaseView.Title"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"/>
    </RelativeLayout>

</RelativeLayout>